package practice.java;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.Scanner;

import practice.java.Gadget.Category;

public class Entry {

	public static void main(String[] args) {
		int choice ;
		Scanner sc= new Scanner(System.in);
		
		Gadget_Service gs= new Gadget_Service();
		
	
		
		
		int id=0;
		Category category;
		String Listingdate;
		int Stock;
		String StockUpdateDate;
		String lastselldate;
		double Price;
		int discount;
		
		do {
			System.out.println("1.Add a Gadget");
			System.out.println("2.Show Gadget");
			System.out.println("3.Update Stock");
			System.out.println("4.Remove");
			System.out.println("5.Exit");
			
			
			choice=sc.nextInt();
			
			switch(choice) {
			case 1:{
					try {
						System.out.println("Enter Category");
						int Cchoice;
						System.out.println("1. Laptop  2. SmartPhone  3. Tablet");
						Cchoice= sc.nextInt();
						if(Cchoice==1)
							category =Category.Laptop;
						else if(Cchoice==2)
							category = Category.Smartphone;
						else if(Cchoice==3)
							category = Category.Tablet;
						else {
							System.out.println("Wrong Category: Gadget Not Added");
							break;
						}
						
						System.out.println("Enter Stock");
						Stock=sc.nextInt();
						System.out.println("Enter Price");
						Price=sc.nextDouble();
						System.out.println("Enter Discount");
						discount=sc.nextInt();
						sc.nextLine();

						
						System.out.println("Enter Stock Update Date");
						StockUpdateDate=sc.nextLine();
						System.out.println("Enter Last Sell Date");
						lastselldate=sc.nextLine();
						
						System.out.println("Enter Localdate");
						Listingdate=sc.nextLine();
						
						Gadget g = new Gadget(id++ ,category, LocalDate.parse(Listingdate),Stock, LocalDate.parse(StockUpdateDate), LocalDate.parse(lastselldate),Price, discount);
						gs.add(g);
					} catch (Exception e) {
						e.printStackTrace();
					}
				}break;
			case 2:{
					System.out.println("-------------Showing all Gadgets--------------");
					gs.showAll();
					System.out.println("----------------------------------------------");
				}break;
			case 3:{
					System.out.println("Enter Id that you want to update");
					int Gid=sc.nextInt();
					System.out.println("Enter Stock that you want to update");
					Stock=sc.nextInt();
					
					gs.update(Gid, Stock);
				}break;
			case 4:{
					gs.remove();
					System.out.println("Removed Gadget That are not sold for an year");
				}break;
			
			default: break;
			
			}
		}while(choice!=5);
	}

}
